<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>release</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>${package.includeBaseDirectory}</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <includes>
        <include>README.md</include>
        <include>LICENSE</include>
        <include>code/*.lua</include>
        <include>gui/*.lua</include>
        <include>gui/*.xml</include>
        <include>libs/**/*.lua</include>
        <include>libs/**/*.xml</include>
        <include>assets/*.blp</include>
        <include>assets/*.tga</include>
        <include>localization/*.lua</include>
      </includes>
      <excludes>
        <exclude>code/GM_Debug.lua</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>build-resources/gearmenu-release.toc.tpl</source>
      <outputDirectory>./</outputDirectory>
      <filtered>true</filtered>
      <destName>GearMenu.toc</destName>
    </file>
  </files>
</assembly>
